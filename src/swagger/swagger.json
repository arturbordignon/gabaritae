{
  "openapi": "3.0.1",
  "info": {
    "title": "Gabaritaê API",
    "version": "1.0.0",
    "description": "API para o backend do aplicativo Gabaritaê, que inclui autenticação, gamificação, simulados e histórico do usuário."
  },
  "servers": [
    {
      "url": "https://gabaritae-backend.onrender.com/api",
      "description": "Deployed Backend"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Registrar um novo usuário",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "completeName": { "type": "string", "example": "João Silva" },
                  "email": { "type": "string", "example": "joao.silva@example.com" },
                  "password": { "type": "string", "example": "Senha123@" },
                  "confirmPassword": { "type": "string", "example": "Senha123@" },
                  "category": { "type": "string", "example": "ENEM" }
                },
                "required": ["completeName", "email", "password", "confirmPassword", "category"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário registrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro na validação dos dados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "As senhas não coincidem." }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Erro ao registrar usuário." }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login do usuário",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "Credenciais inválidas" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/auth/forgot-password": {
      "post": {
        "summary": "Solicitar redefinição de senha",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Email de redefinição enviado com sucesso" },
          "404": { "description": "Usuário não encontrado" },
          "500": { "description": "Erro interno do servidor" }
        }
      }
    },
    "/auth/reset-password": {
      "post": {
        "summary": "Redefinir senha do usuário",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "code": { "type": "string" },
                  "newPassword": { "type": "string" },
                  "confirmPassword": { "type": "string" }
                },
                "required": ["email", "code", "newPassword", "confirmPassword"]
              },
              "example": {
                "email": "joao.silva@example.com",
                "code": "123456",
                "newPassword": "Senha123@",
                "confirmPassword": "Senha123@"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Senha redefinida com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Senha redefinida com sucesso." }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Código inválido ou expirado, ou erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Código inválido ou expirado."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Erro ao redefinir senha." }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/home": {
      "get": {
        "summary": "Obter dados da página inicial",
        "tags": ["Home"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Detalhes da página inicial do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "completeName": { "type": "string", "example": "João Silva" },
                    "vidas": { "type": "integer", "example": 8 },
                    "points": { "type": "integer", "example": 45 },
                    "level": { "type": "integer", "example": 3 }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Token de autenticação inválido ou ausente"
          },
          "404": {
            "description": "Usuário não encontrado"
          },
          "500": {
            "description": "Erro no servidor"
          }
        }
      }
    },
    "/profile/me": {
      "get": {
        "summary": "Obter perfil do usuário",
        "tags": ["Perfil"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Perfil retornado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "completeName": { "type": "string" },
                    "email": { "type": "string" },
                    "profilePicture": { "type": "string" },
                    "category": { "type": "string" },
                    "vidas": { "type": "integer" },
                    "points": { "type": "integer" }
                  }
                }
              }
            }
          },
          "500": { "description": "Erro ao buscar perfil" }
        }
      }
    },
    "/profile/update": {
      "put": {
        "summary": "Atualizar perfil do usuário",
        "tags": ["Perfil"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "completeName": {
                    "type": "string",
                    "description": "Nome completo do usuário"
                  },
                  "profilePicture": {
                    "type": "string",
                    "format": "binary",
                    "description": "Arquivo de imagem para a foto do perfil"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Perfil atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "user": {
                      "type": "object",
                      "properties": {
                        "completeName": { "type": "string" },
                        "profilePicture": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": { "description": "Usuário não encontrado" },
          "500": { "description": "Erro ao atualizar perfil" }
        }
      }
    },
    "/profile/change-password": {
      "post": {
        "summary": "Alterar senha do usuário",
        "tags": ["Perfil"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "oldPassword": { "type": "string" },
                  "newPassword": { "type": "string" }
                },
                "required": ["oldPassword", "newPassword"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Senha alterada com sucesso" },
          "400": { "description": "Erro ao validar senha antiga" },
          "500": { "description": "Erro ao alterar senha" }
        }
      }
    },
    "/simulado/provas": {
      "get": {
        "summary": "Obter provas disponíveis do ENEM",
        "tags": ["Simulado"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de provas retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string",
                        "example": "ENEM 2023"
                      },
                      "year": {
                        "type": "integer",
                        "example": 2023
                      },
                      "disciplines": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "label": {
                              "type": "string",
                              "example": "Matemática e suas Tecnologias"
                            },
                            "value": {
                              "type": "string",
                              "example": "matematica"
                            }
                          }
                        }
                      },
                      "languages": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "label": {
                              "type": "string",
                              "example": "Inglês"
                            },
                            "value": {
                              "type": "string",
                              "example": "ingles"
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "example": [
                  {
                    "title": "ENEM 2023",
                    "year": 2023,
                    "disciplines": [
                      {
                        "label": "Matemática e suas Tecnologias",
                        "value": "matematica"
                      }
                    ],
                    "languages": [
                      {
                        "label": "Inglês",
                        "value": "ingles"
                      }
                    ]
                  }
                ]
              }
            }
          },
          "401": {
            "description": "Não autorizado - Token inválido ou ausente"
          },
          "500": {
            "description": "Erro ao buscar provas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/simulado/start": {
      "post": {
        "summary": "Iniciar um novo simulado",
        "tags": ["Simulado"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "year": {
                    "type": "integer",
                    "description": "Ano do ENEM"
                  },
                  "discipline": {
                    "type": "string",
                    "enum": ["matematica", "linguagens", "ciencias-humanas", "ciencias-natureza"]
                  },
                  "language": {
                    "type": "string",
                    "enum": ["ingles", "espanhol"],
                    "description": "Obrigatório apenas para disciplina 'linguagens'"
                  }
                },
                "required": ["year", "discipline"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Simulado iniciado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "simuladoId": { "type": "string" },
                    "vidas": { "type": "integer" },
                    "points": { "type": "integer" },
                    "level": { "type": "integer" },
                    "simuladoNumber": { "type": "integer" },
                    "questions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "questionId": { "type": "string" },
                          "index": { "type": "integer" },
                          "title": { "type": "string" },
                          "context": { "type": "string" },
                          "alternatives": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "letter": { "type": "string" },
                                "text": { "type": "string" },
                                "file": {
                                  "type": "string",
                                  "nullable": true
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "enum": [
                        "Você já tem um simulado em andamento",
                        "Idioma inválido ou não especificado para disciplina de linguagens",
                        "Limite de simulados atingido"
                      ]
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Sem vidas disponíveis",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "proximaVida": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/simulado/answer": {
      "post": {
        "summary": "Submit an answer for a simulado question",
        "tags": ["Simulado"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "questionId": {
                    "type": "string",
                    "description": "ID of the question being answered"
                  },
                  "userAnswer": {
                    "type": "string",
                    "description": "User's selected alternative (A, B, C, D or E)"
                  },
                  "responseTime": {
                    "type": "integer",
                    "description": "Response time in seconds",
                    "maximum": 300
                  }
                },
                "required": ["questionId", "userAnswer", "responseTime"]
              },
              "example": {
                "questionId": "150",
                "userAnswer": "A",
                "responseTime": 45
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Answer submitted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "correct": { "type": "boolean" },
                    "vidasRestantes": { "type": "integer" },
                    "pointsEarned": { "type": "integer" },
                    "currentPoints": { "type": "integer" },
                    "level": { "type": "integer" },
                    "isComplete": { "type": "boolean" },
                    "currentQuestionIndex": {
                      "type": "integer",
                      "nullable": true
                    },
                    "answer": {
                      "type": "object",
                      "properties": {
                        "userAnswer": { "type": "string" },
                        "correctAnswer": { "type": "string" },
                        "explanation": { "type": "string" }
                      }
                    }
                  }
                },
                "example": {
                  "correct": true,
                  "vidasRestantes": 9,
                  "pointsEarned": 10,
                  "currentPoints": 120,
                  "level": 2,
                  "isComplete": false,
                  "currentQuestionIndex": 1,
                  "answer": {
                    "userAnswer": "A",
                    "correctAnswer": "A",
                    "explanation": "Resposta correta!"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/simulado/{discipline}/{simuladoNumber}": {
      "get": {
        "summary": "Get simulado details by discipline and simulado number",
        "tags": ["Simulado"],
        "parameters": [
          {
            "name": "discipline",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "simuladoNumber",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Simulado details retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "discipline": { "type": "string" },
                    "simuladoNumber": { "type": "integer" },
                    "year": { "type": "integer" },
                    "questions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "questionId": { "type": "string" },
                          "index": { "type": "integer" },
                          "year": { "type": "integer" },
                          "title": { "type": "string" },
                          "context": { "type": "string" },
                          "files": {
                            "type": "array",
                            "items": { "type": "string" }
                          },
                          "alternativesIntroduction": { "type": "string" },
                          "alternatives": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "letter": { "type": "string" },
                                "text": { "type": "string" },
                                "file": {
                                  "type": "string",
                                  "nullable": true
                                }
                              }
                            }
                          },
                          "correctAlternative": { "type": "string" },
                          "userAnswer": { "type": "string" },
                          "isCorrect": { "type": "boolean" },
                          "responseTime": { "type": "integer" },
                          "answeredAt": { "type": "string", "format": "date-time" }
                        }
                      }
                    },
                    "startedAt": { "type": "string", "format": "date-time" },
                    "completedAt": { "type": "string", "format": "date-time" },
                    "status": { "type": "string" },
                    "score": { "type": "integer" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Simulado not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/simulado/status": {
      "get": {
        "summary": "Get the current status of the simulado",
        "tags": ["Simulado"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Simulado status retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "active": { "type": "boolean" },
                    "simuladoNumber": { "type": "integer" },
                    "currentQuestion": { "type": "integer" },
                    "vidas": { "type": "integer" },
                    "discipline": { "type": "string" }
                  }
                },
                "example": {
                  "active": true,
                  "simuladoNumber": 1,
                  "currentQuestion": 3,
                  "vidas": 8,
                  "discipline": "matematica"
                }
              }
            }
          },
          "404": {
            "description": "No active simulado found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                },
                "example": {
                  "error": "Nenhum simulado ativo"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                },
                "example": {
                  "error": "Erro ao buscar status do simulado"
                }
              }
            }
          }
        }
      }
    },

    "/simulado/provas": {
      "get": {
        "summary": "Obter provas disponíveis do ENEM",
        "tags": ["Simulado"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de provas retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "year": { "type": "integer" },
                      "title": { "type": "string" },
                      "disciplines": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "label": { "type": "string" },
                            "value": { "type": "string" }
                          }
                        }
                      }
                    }
                  }
                },
                "example": [
                  {
                    "year": 2023,
                    "title": "ENEM 2023",
                    "disciplines": [
                      {
                        "label": "Matemática",
                        "value": "matematica"
                      }
                    ]
                  }
                ]
              }
            }
          },
          "404": {
            "description": "Nenhuma prova encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro ao buscar provas"
          }
        }
      }
    },
    "/simulado/historico/disciplina": {
      "post": {
        "summary": "Obter histórico de simulados por disciplina",
        "tags": ["Histórico"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "discipline": {
                    "type": "string",
                    "enum": ["matematica", "linguagens", "ciencias-humanas", "ciencias-natureza"]
                  }
                },
                "required": ["discipline"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Histórico retornado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "simuladoNumber": { "type": "integer" },
                      "year": { "type": "integer" },
                      "startedAt": { "type": "string", "format": "date-time" },
                      "completedAt": { "type": "string", "format": "date-time" },
                      "status": { "type": "string" },
                      "score": { "type": "integer" },
